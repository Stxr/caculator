<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_input"
        android:hint="@string/app_name"
        android:background="@drawable/white_bg"
        android:layout_above="@+id/num"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="66sp"
        android:textColor="#c99c6c"
        />
    <LinearLayout
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/first_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <Button
                android:id="@+id/bt_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="C"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="7"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="4"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="1"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_hd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="%"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/second_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/button_text"
            >
            <Button
                android:id="@+id/bt_del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="DEL"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="8"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="2"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="0"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/second_line"
            android:id="@+id/third_line"
            android:orientation="vertical"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/button_text"
            >
            <Button
                android:id="@+id/bt_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="รท"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="9"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_6"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:background="@drawable/button_selector"
                android:text="6"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="3"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_dot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="."
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fourth_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/bt_mul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="ร"
                android:height="62dp"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="-"
                android:textSize="25sp"
                android:textColor="@color/button_text"
                />
            <Button
                android:id="@+id/bt_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="62dp"
                android:background="@drawable/button_selector"
                android:text="+"
                android:textSize="25sp"
                android:textColor="@color/button_text"

                />
            <Button
                android:id="@+id/bt_equ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="124dp"
                android:background="@drawable/button_selector"
                android:text="="
                android:textSize="25sp"
                android:textColor="@color/button_text"

                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
